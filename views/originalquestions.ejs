<% include header %>
<div ng-app="mcqModule" 
<div class="container">
        
		                <div class="row row-content" ng-controller="McqController ">
												
						
				            <div class="col-xs-12">
							<section>
							<ul class="media-list">
							<li class="media" ng-repeat="mcq in questions.mcqs">
						
                    <div class="media-body" >
                        <h4  class="media-heading">Question&nbsp;{{mcq.questionid}}:&nbsp;{{mcq.question}}
                        </h4></br>
						<p style="font-size:18px;"><b style="color:blue">A.</b>&nbsp;&nbsp;{{mcq.option1}}</p>
						<p style="font-size:18px;"><b style="color:blue">B.</b>&nbsp;&nbsp;{{mcq.option2}}</p>
						<p style="font-size:18px;"><b style="color:blue">C.</b>&nbsp;&nbsp;{{mcq.option3}}</p>
						<p style="font-size:18px;"><b style="color:blue">D.</b>&nbsp;&nbsp;{{mcq.option4}}</p>
						
						<label style="color:blue">Show Answer:</label>&nbsp;&nbsp;<input style="height: 20px;width:20px; color:blue" type="checkbox" id="show" name="show" ng-model="show"/>
						<p style="font-size:18px;" ng-show="show"><b style="color:blue">Answer:</b>&nbsp;&nbsp;{{mcq.answer}}</p>
						<p style=" border-bottom: 2px solid red;"></p>	
                    </div>
					</li>
					</ul>
					</section>
		
                </div>
            </div>
						</div>


	</div>
	
	<script src="../bower_components/angular/angular.min.js"></script>
<script src="../../js/app/productCategory/mcqModule.js"></script>
<script src="../../js/app/productCategory/mcqService.js"></script>
<script src="../../js/app/productCategory/mcqController.js"></script>

<% include footer %>