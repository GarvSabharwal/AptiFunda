<% include header %>
<main style="padding-top:85px;" ng-app="try">
        <!--Main layout-->
		
        <div class="container" ng-controller="tryController">
		
            <!--Page heading-->
            <div class="row">
                <div class="col-md-12">
                    
					
				
                </div>
            </div>
            <!--/.BreadCrumb with Title-->
            <div class="row" >
                <!--First column-->
                <div class="col-md-9 unit-section" >
				<h4 class="h4-responsive"> 
                        <small class="text-muted">Directions to Solve: </small>
					<hr> 
                        <small class="text-muted"><%=direction%></small>
                    </h4>
					
                <ul class="list-group" >
		    <% students.forEach( function( student ) { %>
			
			<li style="background-color:#f1f1f1" class="list-group-item"><h5><strong>Q&nbsp;<%=-1*(student.questionid-(totalStudents+1)) %>:&nbsp;<%= student.question %><img src="../../<%= student.questioni%>.png" onerror="this.style.display='none'"/></strong></h5></br>
			
			
						<p style="font-size:18px; color:#4F5E7E"><b style="color:#356BC3">A.</b>&nbsp;&nbsp;<%= student.option1 %><img src="../../<%= student.option1i%>.png" onerror="this.style.display='none'"/></p>
						<p style="font-size:18px; color:#4F5E7E"><b style="color:#356BC3">B.</b>&nbsp;&nbsp;<%= student.option2 %><img src="../../<%= student.option2i%>.png" onerror="this.style.display='none'" /></p>
						<p style="font-size:18px; color:#4F5E7E"><b style="color:#356BC3">C.</b>&nbsp;&nbsp;<%= student.option3 %><img src="../../<%= student.option3i%>.png" onerror="this.style.display='none'" /></p>
						<p style="font-size:18px; color:#4F5E7E"><b style="color:#356BC3">D.</b>&nbsp;&nbsp;<%= student.option4 %><img src="../../<%= student.option4i%>.png" onerror="this.style.display='none'" /></p>
					
						
						<button style="font-size:15px; background-color:#356BC3" class="btn" ng-click="a<%= student.questionid %>=true" ng-hide="a<%= student.questionid %>" ><i class="fa fa-caret-square-o-down" aria-hidden="true"></i>&nbsp;&nbsp;Show Answer</button>
						<button style="font-size:15px; background-color:#356BC3" class="btn" ng-click="a<%= student.questionid %>=false" ng-show="a<%= student.questionid %>"><i class="fa fa-caret-square-o-up" aria-hidden="true"></i>&nbsp;&nbsp;Hide Answer</button>

						
						<div ng-show="a<%= student.questionid %>">
						<p style="font-size:18px;" ><b style="color:#356BC3">Answer:</b>&nbsp;&nbsp;<%= student.answer %>
						</p>
						<p>
						<div ng-if="!<%= student.technique%>">
						<button style="font-size:15px; background-color:#356BC3" class="btn"   ng-click="aa<%= student.questionid %>=true" ng-hide="aa<%= student.questionid %>"><i class="fa fa-caret-square-o-down" aria-hidden="true"></i>&nbsp;&nbsp;Shortcut Technique</button>
						<button style="font-size:15px; background-color:#356BC3" class="btn"  ng-click="aa<%= student.questionid %>=false" ng-show="aa<%= student.questionid %>"><i class="fa fa-caret-square-o-up" aria-hidden="true"></i>&nbsp;&nbsp;Hide Technique</button>
						</p>
						<p ng-show="aa<%= student.questionid %>"><amp-img src="../../<%= student.technique%>.png" alt="Shortcut_Technique" height="200" ></amp-img>
						</p>
						</div>
						</div>
						</li>
			<% }) %>
			
						
		</ul>
		<nav class="row text-xs-center">
			<% if (pageCount > 1) { %>
                <ul class="pagination">
					<% if (currentPage > 1) { %>
	                <li class="page-item">
                        <a class="page-link" href="<%=link%>/?page=1" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
					
	            <% } %>
				<% var i = 1;
	            if (currentPage > 5) {
	                i = +currentPage - 4;
	            } %>
	            <% if (i !== 1) { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="<%=link%>/?page=<%= i %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
					<% } %>
					<% for (i; i<=pageCount; i++) { %>
	                <% if (currentPage == i) { %>
                    <li class="page-item active">
                        <a class="page-link" href="<%=link%>/?page=<%= i %>"><%= i %><span class="sr-only">(current)</span></a>
                    </li>
					<% } else { %>
					<li class="page-item"><a class="page-link" href="<%=link%>/?page=<%= i %>"><%= i %></a></li>
                    
                    <% } %>
	                <% if (i == (+currentPage + 4)) { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="<%=link%>/?page=<%= i %>">...</a>
                    </li>
					<% break; } %>
				<% } %>
	            <% if (currentPage != pageCount) { %>
	                <li class="page-item">
                        <a href="<%=link%>/?page=<%= pageCount %>" class="page-link"  aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
	            <% } %>
	        </ul>
	    <% } %>

            </nav>			
				</div>
				<div class="col-md-3" >
				</div>
				
	
			</div>
			
			
</div>
</main>
<% include footer %>